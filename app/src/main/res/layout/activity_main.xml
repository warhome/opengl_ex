<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/BackgroundColor">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>


    <RelativeLayout
        android:id="@+id/gl_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_layout"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/autofixTextView"
                android:text="@string/autofix"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"/>

            <Switch
                android:id="@+id/autofixSwitch"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/autofixTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:shadowColor="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/brightTextView"
                android:text="@string/brightness"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/autofixTextView"
                android:layout_marginTop="22dp"/>

            <SeekBar
                android:id="@+id/seekBarBright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/brightTextView"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:progress="1"
                android:max="100"/>
            <TextView
                android:id="@+id/GammaTextView"
                android:text="@string/gamma"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/brightTextView"
                android:layout_marginTop="22dp"/>

            <SeekBar
                android:id="@+id/seekBarGamma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/GammaTextView"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:progress="1"
                android:max="100"/>
            <TextView
                android:id="@+id/AnotherTextView"
                android:text="@string/anotherfilter"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/GammaTextView"
                android:layout_marginTop="22dp"/>

            <SeekBar
                android:id="@+id/seekBarAnother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/AnotherTextView"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:progress="1"
                android:max="100"/>
            <TextView
                android:id="@+id/Another2TextView"
                android:text="@string/anotherfilter"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/AnotherTextView"
                android:layout_marginTop="22dp"/>

            <SeekBar
                android:id="@+id/seekBar2Another"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Another2TextView"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:progress="1"
                android:max="100"/>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>